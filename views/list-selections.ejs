<!DOCTYPE html>
<html>
  <head>
    <title>Election Data: Candidates</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <h2>NBA Drafts Database </h2>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li>
      <%=item.year%> &nbsp Round <%=item.number%>  &nbsp<a href="/selections/<%=item._id%>"><%=item.name%> Pick</a>
      &nbsp <!-- <%=item.player%> --></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No selections found.</div>
    <% } %>
   <div class="control">
      <h4>Search</h4>
      <form method="get" action="/selections/">
        <label>Enter keyword: <input name="name" type="text"></label>
        <button>Submit</button>
      </form>
    </div>
    
            <p>
     &nbsp; <a href="/drafts/"> View all drafts </a>
     </p>
  </body>
</html>
